<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TableBooking">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Choose Date"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:gravity="center"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="showPopupCID"
            app:cardBackgroundColor="#ffffff">

            <TextView
                android:id="@+id/tvCID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="5dp"
                android:text="First Date"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/popupCID"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="315dp"
                android:src="@drawable/cal" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="105dp">

        <androidx.cardview.widget.CardView
            android:layout_width="370dp"
            android:layout_height="60dp"
            android:layout_marginHorizontal="10dp"
            android:onClick="showPopupCOD"
            app:cardBackgroundColor="#ffffff">

            <TextView
                android:id="@+id/tvCOD"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="15dp"
                android:layout_marginLeft="5dp"
                android:text="Last Date"
                android:textSize="24sp" />

            <ImageView
                android:id="@+id/popupCOD"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_marginVertical="5dp"
                android:layout_marginLeft="315dp"
                android:src="@drawable/cal" />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"
        android:layout_marginTop="175dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TABLE OPTION"
        android:textSize="24sp"
        android:layout_centerInParent="true"
        android:layout_alignParentTop="true"
        android:gravity="center"
        android:layout_marginTop="180dp"/>

    <TextView
        android:id="@+id/info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="185dp"
        android:text="TABLE INFO"
        android:textStyle="italic"
        android:textSize="19sp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="175dp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="WEDDING"
                    android:textSize="22sp" />


                <ImageView
                    android:id="@+id/open"
                    android:layout_width="124dp"
                    android:layout_height="140dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="140dp"
                    android:src="@drawable/open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM125 \n-1500 people"
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num1"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="140dp"
                    android:background="#00AD5F5F"
                    app:backGroundColor="#52BB63"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="155dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="BIRTHDAY DINNER"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="132dp"
                    android:src="@drawable/birthday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM132 \n-100 people "
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num2"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="140dp"
                    app:backGroundColor="#52BB63"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="280dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="SPECIAL OCCASION"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="115dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/special" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM150 \n-500 people"
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num3"
                    android:layout_width="120dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="140dp"
                    app:backGroundColor="#52BB63"
                    app:finalNumber="3"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </androidx.cardview.widget.CardView>
        </LinearLayout>


        <TextView
            android:layout_width="206dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="21dp"
            android:text="Your Booking Number: "
            android:textSize="22sp" />

        <TextView
            android:id="@+id/randomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="228dp"
            android:layout_marginBottom="20dp"
            android:text="#"
            android:textSize="22sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnConfirm"
            android:layout_width="77dp"
            android:layout_height="81dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="315dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="17dp"
            android:clickable="true"
            app:backgroundTint="#9C27B0"
            app:srcCompat="@drawable/background" />


    </RelativeLayout>

</RelativeLayout>