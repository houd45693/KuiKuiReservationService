    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="160dp"
        android:background="#ffd2dc">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardBackgroundColor="#ffd2dc">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="WEDDING"
                    android:textColor="#000000"
                    android:textSize="22sp" />


                <ImageView
                    android:id="@+id/open"
                    android:layout_width="125dp"
                    android:layout_height="110dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/open" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000"
                    android:text="RM125 \n-1500 people"
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num1"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="120dp"
                    android:background="#00AD5F5F"
                    app:backGroundColor="#E9A20F0F"
                    app:finalNumber="10"
                    app:initialNumber="0"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>


            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="135dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardBackgroundColor="#ffd2dc">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:text="BIRTHDAY DINNER"
                    android:textColor="#000000"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="90dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="132dp"
                    android:src="@drawable/newbirthday" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:text="RM132 \n-100 people "
                    android:textColor="#000000"
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num2"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="120dp"
                    android:background="#00AD5F5F"
                    app:backGroundColor="#E9A20F0F"
                    app:finalNumber="10"
                    app:initialNumber="0"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp">

                </com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>
            </androidx.cardview.widget.CardView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="255dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="125dp"
                app:cardBackgroundColor="#ffd2dc">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="12dp"
                    android:textColor="#000000"
                    android:text="SPECIAL OCCASION"
                    android:textSize="22sp" />

                <ImageView
                    android:layout_width="125dp"
                    android:layout_height="100dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="130dp"
                    android:src="@drawable/christmas" />


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="125dp"
                    android:layout_marginTop="40dp"
                    android:textColor="#000000"
                    android:text="RM150 \n-500 people"
                    android:textSize="23sp" />

                <com.cepheuen.elegantnumberbutton.view.ElegantNumberButton
                    android:id="@+id/num3"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_gravity="center"
                    android:layout_marginRight="120dp"
                    android:background="#00AD5F5F"
                    app:backGroundColor="#E9A20F0F"
                    app:finalNumber="10"
                    app:initialNumber="0"
                    app:textColor="#FFFFFF"
                    app:textSize="10sp"></com.cepheuen.elegantnumberbutton.view.ElegantNumberButton>

            </androidx.cardview.widget.CardView>
        </LinearLayout>



        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:text="Your Booking Number: "
            android:textColor="#000000"
            android:textSize="22sp" />

        <TextView
            android:id="@+id/randomNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="180dp"
            android:layout_marginBottom="35dp"
            android:text="#"
            android:textSize="22sp" />

        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/btnConfirm"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="300dp"
            android:layout_marginEnd="19dp"
            android:layout_marginBottom="20dp"
            android:clickable="true"
            app:backgroundTint="#E9A20F0F"
            app:srcCompat="@drawable/background" />

    </RelativeLayout>

</RelativeLayout>